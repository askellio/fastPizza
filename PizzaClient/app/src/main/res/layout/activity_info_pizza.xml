<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_pizza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.askellio.pizzaclient.activities.InfoPizzaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagePizza"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextInfoName"
        android:layout_alignParentLeft="true"
        android:text="Название: "
        android:textSize="20dp"
        android:layout_below="@+id/imagePizza"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtTextInfoName"
        android:textAlignment="textEnd"
        android:id="@+id/txtInfoName"
        android:text="Мексиканка"
        android:layout_below="@+id/imagePizza"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextInfoType"
        android:layout_alignParentLeft="true"
        android:text="Тип: "
        android:textSize="20dp"

        android:layout_below="@+id/txtTextInfoName"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtTextInfoType"
        android:textAlignment="textEnd"
        android:id="@+id/txtInfoType"
        android:layout_below="@+id/txtInfoName"
        android:text="italic"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextInfoWeight"
        android:layout_alignParentLeft="true"
        android:text="Вес: "
        android:textSize="20dp"
        android:layout_below="@+id/txtTextInfoType"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtTextInfoWeight"
        android:textAlignment="textEnd"
        android:id="@+id/txtInfoWeight"
        android:text="500"
        android:layout_below="@+id/txtInfoType"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextInfoProducts"
        android:layout_alignParentLeft="true"
        android:text="Продукты: "
        android:textSize="20dp"
        android:layout_below="@+id/txtTextInfoWeight"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:layout_toRightOf="@+id/txtTextInfoProducts"
        android:id="@+id/txtInfoProducts"
        android:layout_below="@+id/txtInfoWeight"
        android:text="Колбаса, сыр, овощи"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTextInfoPrice"
        android:layout_alignParentLeft="true"
        android:text="Стоимость: "
        android:textSize="20dp"
        android:layout_below="@+id/txtInfoProducts"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtTextInfoPrice"
        android:textAlignment="textEnd"
        android:layout_alignParentRight="true"
        android:text="300"
        android:id="@+id/txtInfoPrice"
        android:textSize="20dp"
        android:layout_below="@+id/txtInfoProducts"/>

</RelativeLayout>